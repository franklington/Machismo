  <div class="card-columns">
    <div class=" card d-lg-none">
          <div class="info">
              <hr><h2>Make (Wo)Men aware of <br>machist behaviour</h2><hr>
              <p>Teile hier deine Gedanken und Erlebnisse. Anonym.</p>

              {{#link-to 'index.create' class="button"}}
                +
              {{/link-to}}
              {{#link-to 'about'  class="button"}}
                ?
              {{/link-to}}
          </div>
    </div>
    {{#each model as |post index|}}
      <div class=" post-container card">

        <div class="post">
          <div class="date">{{moment-format post.datum 'DD.MM.YYYY'}}, {{post.zeit}}</div>
          <div class="place">{{post.ort}} {{post.wo}}</div>
          <ul>
            {{#if post.pfiff}}  <li>Hinterhergepfiffen</li> {{/if}}
            {{#if post.hupen}}  <li>Angehupt</li>  {{/if}}
            {{#if post.schmatz}}  <li>Schmatzgeräusche</li>  {{/if}}
            {{#if post.spuck}}  <li>Gespuckt</li>  {{/if}}
            {{#if post.schimpf}}  <li>Beschimpft</li>  {{/if}}
            {{#if post.starr}}  <li>Angestarrt</li>  {{/if}}
            {{#if post.lach}}  <li>Ausgelacht</li>  {{/if}}
            {{#if post.beruht}}  <li>Berührt</li>  {{/if}}
          </ul>
          <p>
            {{post.beschreibung}}
          </p>
        </div>
      </div>


      {{#if (eq index 1)}}

        <div class=" card d-none d-lg-inline-block">
              <div class="info">
                  <hr><h2>Make (Wo)Men aware of <br>machist behaviour</h2><hr>
<br>
                  <p>Teile hier deine <br>Gedanken und <br>Erlebnisse. <br> Anonym.</p>

                  {{#link-to 'index.create' class="button"}}
                    +
                  {{/link-to}}
                  {{#link-to 'about'  class="button"}}
                    ?
                  {{/link-to}}
                  <br>
                  <br>
                  <br>
              </div>
            </div>

      {{/if}}
    {{/each}}
  </div>




        {{outlet}}
